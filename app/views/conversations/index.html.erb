<div class="ui segment">
 <h3>Mailbox</h3>
 <div class="ui list">
  <div class=”item”>
   <% @conversations.each do |conversation| %>
   <% if conversation.sender_id == current_player.id ||      conversation.recipient_id == current_player.id %>
    <% if conversation.sender_id == current_player.id %>
      <% recipient = Player.find(conversation.recipient_id) %>
    <% else %>
      <% recipient = Player.find(conversation.sender_id) %>
    <% end %>
    <li>
      <%= link_to recipient.name,   conversation_messages_path(conversation)%>
    </li>
   <% end %>
  <% end %>
  </div>
 </div>
</div>
<div class="ui segment">
 <h3>All Players</h3>
  <div class="ui list">
   <% @players.each do |player| %>
    <% if player.id != current_player.id %>
     <div class="item">
   <%= player.name %> || <%= player.team.name  %> || <%= link_to 'Send Message', conversations_path(sender_id: current_player.id, recipient_id: player.id), method: 'post'%>
 </div>
  <% end %>
 <% end %>
 </div>
</div>
