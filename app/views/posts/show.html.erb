<div class="post_content" style="margin-top: 1em">
  <h1><%= @post.title %></h1>
  <hr>
  <p class="content_post"> <%= @post.content %></p>

  <break>
    <hr>
    <break>

<div class="post_comments">
  <h2><%= @post.comments.count %> Comments</h2>

  <%= render @post.comments %>
</div>
  <h3> Reply to thread </h3>
  <%= render "comments/form" %>

<break>
  <hr>
  <break>

    <% if @post.player_id == current_player.id %>
      <%= link_to "Edit", edit_post_path(@post), class: "post_button" %>
      <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete your post?"}, class: "post_button" %>
    <% end %>


</div>
